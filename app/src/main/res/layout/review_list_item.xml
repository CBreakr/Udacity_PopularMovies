<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/tv_list_prefix"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="32sp"
        android:gravity="top"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="@string/list_prefix"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_review_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf = "@id/tv_list_prefix"
        app:layout_constraintBottom_toBottomOf = "@id/tv_list_prefix"
        app:layout_constraintLeft_toRightOf = "@id/tv_list_prefix"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tv_review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf = "@id/tv_review_source"
        app:layout_constraintLeft_toRightOf = "@id/tv_list_prefix"
        android:layout_marginTop="10dp"
        />

</android.support.constraint.ConstraintLayout>