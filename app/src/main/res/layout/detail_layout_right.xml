<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_detail_layout_right"
    style="@style/LinearLayoutRightStyle"
    android:layout_weight = "1"
    >

    <TextView
        android:id="@+id/tv_rating_caption"
        android:text="@string/rating_label"
        style="@style/RatingCaptionStyle"
        />

    <TextView
        android:id="@+id/tv_rating"
        style="@style/RatingStyle"
        />

    <TextView
        android:id="@+id/tv_release_date_caption"
        android:text="@string/release_date_label"
        style="@style/ReleaseLabelStyle"
        />

    <TextView
        android:id="@+id/tv_release"
        style="@style/ReleaseBaseStyle"
        android:layout_marginBottom="35dp"
        />

    <Button
        android:id="@+id/favorite_button"
        style="@style/FavoriteButtonStyle"
        />

</android.support.v7.widget.LinearLayoutCompat>